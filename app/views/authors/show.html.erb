    <div id="profile_box">
      <div id="author_avatar">
        <%= image_tag @author.avatar.profile_thumb %>
      </div>
        <div id="author_name">
          <h2><%= @author.name %></h2>
        </div>
    </div>

<div id="author_articles">
    <div class="row">
    <ul class="article_list">
        <% unless @author.articles.blank? %>
      <% @author.articles.each do |article| %>
      <% if article.author.present? %>
        <%= link_to article, class: :"article_link h2" do %>
          <li class="title">
            <%= article.title.html_safe %>
          </li>
            <% end %>
        <% end %>
      <% end %>
      <% else %>
      <%= render "no-articles" %>
      <% end %>
      </ul>
    </div>
</div>
